<!DOCTYPE html>
<html lang="{{lang}}">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#E3F2FD">
    <title>Movie Diary | Lists</title>
    <link href="/static/css/custom/loader.min.css" type="text/css" rel="stylesheet" media="screen">
    <noscript>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
              type="text/css" rel="stylesheet" media="screen">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/css/materialize.min.css"
              type="text/css" rel="stylesheet" media="screen">
        <link href="/static/css/custom/base.css" type="text/css" rel="stylesheet" media="screen">
    </noscript>
</head>
<body class="blue lighten-5">
<div id="loader-wrapper">
    <div id="loader"></div>
    <div class="loader-section section-left"></div>
    <div class="loader-section section-right"></div>
</div>
{{> templates/navbar.hbs}}
<main>
    <h3 class="light grey-text text-lighten-1 page-heading">{{i18n "NAVBAR_LISTS" locale=lang}}</h3>
    <div class="row"></div>
    <div class="row">
        <div class="col s12 m12 m12">
            <div class="row">
                <div class="col s12 m5 l4 xl3"> <!-- Vasak äär -->
                    <div class="row">
                        <div class="col s12 m12 l12 xl12"> <!-- Listide nimekiri -->
                            <div class="card z-depth-0">
                                <div class="card-content">
                                    <div class="row">
                                        <table>
                                            <tbody>
                                            <tr>
                                                <td>
                                                    <!-- Modal Trigger -->
                                                    <a class="blue-text text-darken-2 home-link lighten-2 z-depth-0"
                                                       href="#modalList">{{i18n "LISTS_CREATE_NEW_LIST" locale=lang}}</a>
                                                </td>
                                            </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                    <div class="row">
                                        <table class="bordered highlight">
                                            <tbody id="lists-tabel">
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col s12 m12 l12">
                            <div class="col card s12 m12 l12 z-depth-0">
                                <ul class="collapsible z-depth-0" data-collapsible="accordion">
                                    <li>
                                        <div class="collapsible-header">
                                            <h5 class="plot-title">{{i18n "LISTS_DELETED_LISTS" locale=lang}}</h5>
                                            <h6 class="grey-text text-darken-2">{{i18n "MOVIES_CLICK_TO_OPEN" locale=lang}}</h6>
                                        </div>
                                        <div class="collapsible-body white">
                                            <table class="bordered">
                                                <tbody id="deleted-lists-table"></tbody>
                                            </table>
                                        </div>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col s12 m7 l8 xl9"> <!-- Listi sisu peale avamist -->
                    <div id="list-title-holder"></div>
                    <div id="list-container"></div>
                </div>
            </div>

            <!-- New List modal -->
            <div id="modalList" class="modal z-depth-0">
                <div class="modal-content">
                    <div class="col s12 m12 l12">
                        <h5>{{i18n "LISTS_CREATE_NEW_LIST" locale=lang}}</h5>
                        <div class="row"></div>
                        <div class="input-field">
                            <input id="createListName" type="text" data-length="50">
                            <label for="createListName">{{i18n "LIST_NAME" locale=lang}}</label>
                        </div>
                    </div>
                </div>
                <div class="row"></div>
                <div class="modal-footer">
                    <a class="modal-action waves-effect waves-green btn-flat"
                       id="create-list" onclick="createNewList()">{{i18n "LISTS_CREATE" locale=lang}}</a>
                    <a class="modal-action modal-close waves-effect waves-red btn-flat" id="cancel-new-list">
                        {{i18n "MOVIES_CANCEL" locale=lang}}
                    </a>
                </div>
            </div>

            <!-- Delete list modal -->
            <div id="modal-delete-list" class="modal z-depth-0 col m6 offset-m3 l4 offset-l4">
                <div class="modal-content">
                    <div class="col s12 m12 l12">
                        <h5 class="center">{{i18n "LISTS_DELETE_WARNING" locale=lang}}</h5>
                        <div class="row"></div>
                        <div class="modal-footer">
                            <a class="modal-action waves-effect waves-green btn-flat" id="delete-list">{{i18n "LISTS_DELETE" locale=lang}}</a>
                            <a class="modal-action modal-close waves-effect waves-red btn-flat">
                                {{i18n "MOVIES_CANCEL" locale=lang}}
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</main>
{{> templates/footer.hbs}}
<script defer type="text/javascript" src="/static/js/custom/loader.js"></script>
<script defer type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script defer type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.98.2/js/materialize.min.js"></script>
<script defer type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/sockjs-client/1.1.4/sockjs.min.js"></script>
<script defer type="text/javascript" src="/static/js/custom/vertx-eventbus.js"></script>
<script defer type="text/javascript" src="/static/js/pages/lists.js"></script>
</body>
</html>