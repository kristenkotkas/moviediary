<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>History</title>
    <link href="/static/css/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" media="screen,projection">
    <link href="/static/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection"/>
    <link href="/static/css/custom/style.css" type="text/css" rel="stylesheet" media="screen,projection">
    <link href="/static/css/custom/base.css" type="text/css" rel="stylesheet" media="screen,projection">
</head>
<body class="blue lighten-5">
{{> templates/navigationBar.hbs}}
<h3 class="light grey-text text-lighten-1 page-heading">History</h3>
<div class="row">
    <div class="col s12 m12 l12">
        <div class="col s12 m6 offset-m3 l3 offset-l1">
            <div class="card z-depth-0">
                <div class="card-content">
                    <span class="card-title">Filters</span>
                    <div class="row">
                        <div class="input-field login-text">
                            <input id="seenFirst" type="checkbox">
                            <label for="seenFirst">
                                <i class="fa fa-eye" aria-hidden="true"></i> &ensp; Was first time
                            </label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field login-text">
                            <input id="wasCinema" type="checkbox">
                            <label for="wasCinema">
                                <i class="fa fa-ticket" aria-hidden="true"></i>&ensp; Was in cinema
                            </label>
                        </div>
                    </div>
                    <div class="row"></div>
                    <div class="row">
                        <div class="input-field login-text">
                            <input id="startingDay" type="date" class="datepicker">
                            <label for="startingDay">Starting day</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field login-text">
                            <input id="endDay" type="date" class="datepicker">
                            <label for="endDay">End day</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field row">
                            <button id="Search" type="submit"
                                    class="btn waves-effect waves-light col s12 z-depth-0">
                                <i class="fa fa-search left"></i>Search
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col s12 m12 l7">
            <div class="card z-depth-0">
                <table class="highlight responsive-table">
                    <thead class="grey-text">
                    </thead>
                    <tbody id="table" class="grey-text">
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>


<script type="text/javascript" src="/static/js/jquery-2.2.4.min.js"></script>
<script type="text/javascript" src="/static/js/materialize.min.js"></script>
<script type="text/javascript" src="/static/js/plugins.js"></script>
<script type="text/javascript" src="/static/js/sockjs-0.3.4.min.js"></script>
<script type="text/javascript" src='/static/js/vertx-eventbus.js'></script>
<script>
    //kõik on asynchronous, function () {} kutsutakse välja nagu vertxi handlerit
    $(document).ready(function () { //siis kui leht laetud
        console.log("Hello world!");

        $("#Search").click(function () {
            var eventbus = new EventBus("{{eventbus}}");
            eventbus.onopen = function () {
                eventbus.send("database_get_history",
                        {
                            'is-first': $("#seenFirst").is(':checked'),
                            'is-cinema': $("#wasCinema").is(':checked'),
                            'start': $("#startingDay").pickadate('picker').get(),
                            'end': $("#endDay").pickadate('picker').get()
                        }
                        , function (error, reply) {
                            console.log(reply.body);
                            var data = reply.body['rows'];
                            $("#table").empty().append(
                                    '<tr>' +
                                    '<th class="table-row">Title</th>' +
                                    '<th>Date</th>' +
                                    '<th>Time</th>' +
                                    '<th></th>' +
                                    '<th></th>' +
                                    '<th></th>' +
                                    '</tr>');
                            Materialize.toast("Retrieved movies from database!", 5000);

                            $.each(data, function (i) {

                                $("#table").append(
                                        '<tr>' +
                                        '<td class="table-row">' + data[i].Title + '</td>' +
                                        '<td>' + data[i].Start + '</td>' +
                                        '<td>' + data[i].Time + '</td>' +
                                        '<td>' + data[i].DayOfWeek + '</td>' +
                                        '<td class="center"><i class=' + data[i].WasFirst + ' aria-hidden="true"></i></td>' +
                                        '<td class="center"><i class=' + data[i].WasCinema + ' aria-hidden="true"></i></td>' +
                                        '</tr>');
                            });
                        });

            }
        });
    });
</script>
</body>
</html>